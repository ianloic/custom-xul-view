<?xml version="1.0"?>
<bindings xmlns="http://www.mozilla.org/xbl"
          xmlns:xul="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul"
          xmlns:xbl="http://www.mozilla.org/xbl">

  <binding id="rating">
    <content>
      <xul:image anonid="1" />
      <xul:image anonid="2" />
      <xul:image anonid="3" />
      <xul:image anonid="4" />
      <xul:image anonid="5" />
    </content>
    <implementation>
      <constructor><![CDATA[
        this._stars = [];
        for (var i=1; i<=5; i++) {
          this._stars.push(
            document.getAnonymouselementByAttribute(this, 'anonid', i));
        }
       ]]>
      </constructor>
      <method name="setMediaItem">
        <parameter name="mediaItem"/>
        <body><![CDATA[
        ]]>
        </body>
      </method>
    </implementation>

    <handlers>
      <handler event="mousedown" phase="capturing">
       <![CDATA[
        this.beginManualMove(event);
       ]]>
      </handler>
    </handlers>
  </binding>
</bindings>



